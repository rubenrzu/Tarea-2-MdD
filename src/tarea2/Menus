public class Menus {

    Menus() {
    }

    public void menuprincipal() {
        System.out.println("\t\t***Agrega tus contactos: Familiares, Amigos y Clientes***");
        System.out.println("1. Agregar contacto");
        System.out.println("2. Eliminar contacto");
        System.out.println("3. Buscar contacto");
        System.out.println("4. Actualizar contacto a partir de nombre");
        System.out.println("5. Mostrar contacto");
        System.out.println("6. Salir");
    }

    public void menuContactos() {
        System.out.println("1. Amigo");
        System.out.println("2. Familia");
        System.out.println("3. Cliente");
        System.out.println("4. Salir");
    }

    public void menuEliminar() {
        System.out.println("1. Eliminar contacto dado el nombre");
        System.out.println("2. Eliminar todos los contactos dado su nombre");
        System.out.println("3. Eliminar amigo dado el nombre");
        System.out.println("4. Eliminar cliente dado el nombre");
        System.out.println("5. Eliminar familiar dado el nombre");
        System.out.println("6. Eliminar todos los amigos");
        System.out.println("7. Eliminar todos los clientes");
        System.out.println("8. Eliminar todas las familiares");
        System.out.println("9. Salir del menu eliminar");
    }

    public void menuBusqueda() {

        System.out.println("1. Buscar amigo por nombre");
        System.out.println("2. Buscar cliente por nombre");
        System.out.println("3. Buscar familiar por nombre y categoria");
        System.out.println("4. Buscar Amigos o Clientes por numero celular");
        System.out.println("5. Buscar Amigos o Familiares por cumpleaños");
        System.out.println("6. Buscar Amigo o Cliente por correo electronico");
        System.out.println("7. Salir del menu busqueda");
    }

    public void menuMostrar() {
        System.out.println("1. Mostrar contacto por nombre");
        System.out.println("2. Mostrar contacto por nombre y categoria");
        System.out.println("3. Mostrar todos los clientes de una compañia");
        System.out.println("4. Mostrar a todos los contactos que tengan correo electronico");
        System.out.println("5. Mostrar a todos los contactos que tengan twiter y/o Facebook");
        System.out.println("6. Mostrar a todos los amigos");
        System.out.println("7. Mostrar a todos los clientes");
        System.out.println("8. Mostrar a todos los familiares");
        System.out.println("9. Salir");
    }
    
    public void menuMeses(){
        System.out.println("1 = Enero");
        System.out.println("2 = Febrero");
        System.out.println("3 = Marzo");
        System.out.println("4 = Abril");
        System.out.println("5 = Mayo");
        System.out.println("6 = Junio");
        System.out.println("7 = Julio");
        System.out.println("8 = Agosto");
        System.out.println("9 = Septiembre");
        System.out.println("10 = Octubre");
        System.out.println("11 = Noviembre");
        System.out.println("12 = Diciembre");
        
        
        
        
        
        
        
        
    }

}
